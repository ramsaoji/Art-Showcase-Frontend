rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == string(get(/databases/$(database)/documents/config/admin).data.adminEmail);
    }
    
    // Artworks collection rules
    match /artworks/{artwork} {
      // Allow reading for everyone
      allow read: if true;
      
      // Only allow create/update/delete for admin
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Config document for storing admin email
    match /config/admin {
      allow read: if true;
      allow write: if false; // Only modifiable through Firebase Console
    }
  }
} 